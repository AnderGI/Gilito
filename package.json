{
  "name": "typescript-ddd-skeleton",
  "version": "1.0.0",
  "description": "Generate Typescript based DDD projects. Template based on https://github.com/CodelyTV/typescript-ddd-skeleton.git",
  "repository": {
    "url": "https://github.com/CodelyTV/typescript-ddd-skeleton"
  },
  "license": "",
  "engines": {
    "node": ">=22.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev:backoffice:backend": "cross-env NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/backoffice/backend/start.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "cross-env NODE_ENV=test jest --passWithNoTests --testPathPattern './tests/contexts/.*/application/.*\\.test\\.ts'",
    "start": "cross-env NODE_ENV=production node dist/src/apps/backoffice/backend/start",
    "test:features": "cross-env NODE_ENV=test cucumber-js -p backoffice_backend",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.779.0",
    "body-parser": "1.20.3",
    "bodybuilder": "2.4.0",
    "bson": "4.5.2",
    "compression": "1.7.4",
    "connect-flash": "0.1.1",
    "cookie-parser": "1.4.7",
    "cookie-session": "1.4.0",
    "copy": "0.3.2",
    "cross-env": "7.0.3",
    "diod": "3.0.0",
    "dotenv": "^16.4.7",
    "errorhandler": "1.5.1",
    "express": "4.21.2",
    "express-promise-router": "4.1.0",
    "express-validator": "6.12.2",
    "glob": "7.2.0",
    "helmet": "4.6.0",
    "http-status": "1.5.0",
    "multer": "1.4.5-lts.2",
    "node-dependency-injection": "2.6.11",
    "nunjucks": "3.2.4",
    "reflect-metadata": "0.2.2",
    "ts-node": "10.9.1",
    "uuid": "11.1.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.0.1",
    "@types/bson": "4.0.5",
    "@types/compression": "1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/cookie-parser": "1.4.2",
    "@types/cookie-session": "2.0.43",
    "@types/cucumber": "6.0.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "4.17.13",
    "@types/faker": "5.5.8",
    "@types/glob": "7.1.4",
    "@types/helmet": "0.0.48",
    "@types/jest": "29.5.14",
    "@types/multer": "1.4.12",
    "@types/node": "^22.13.17",
    "@types/nunjucks": "3.2.0",
    "@types/supertest": "2.0.11",
    "eslint": "8.33.0",
    "eslint-config-codely": "2.1.3",
    "faker": "5.5.3",
    "husky": "7.0.2",
    "jest": "29.7.0",
    "lint-staged": "11.2.0",
    "prettier": "2.4.1",
    "supertest": "6.1.6",
    "ts-jest": "29.3.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
